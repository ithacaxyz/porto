{
  "name": "porto",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm clean && tsc --project ./tsconfig.build.json",
    "build:anvil-state": "tsx scripts/build:anvil-state.ts",
    "build:contracts": "tsx scripts/prebuild:contracts.ts && forge build --config-path ./contracts/account/foundry.toml && forge build --config-path ./contracts/demo/foundry.toml && tsx scripts/postbuild:contracts.ts && pnpm wagmi generate",
    "changeset:prepublish": "pnpm build && tsx ./scripts/prepublish.ts",
    "changeset:publish": "pnpm changeset:prepublish && changeset publish",
    "changeset:version": "changeset version && pnpm format",
    "check": "biome check . --fix --unsafe",
    "check:build": "tsx ./scripts/prepublish.ts && publint --strict ./src && attw --pack ./src --profile esm-only",
    "check:knip": "knip --production",
    "check:repo": "sherif --ignore-rule packages-without-package-json",
    "check:size": "size-limit",
    "check:types": "pnpm run --r --parallel check:types && tsc --noEmit",
    "clean": "rm -rf src/_dist ./tsconfig.build.tsbuildinfo src/tsconfig.build.tsbuildinfo",
    "deps": "pnpx taze -r",
    "dev": "pnpm preconstruct && pnpm --filter playground --filter dialog --filter manager dev",
    "dev:anvil": "pnpm preconstruct && ANVIL=true pnpm --filter playground --filter dialog --filter manager dev",
    "dev:wagmi": "pnpm preconstruct && pnpm --filter wagmi-example --filter dialog --filter manager dev",
    "docs:build": "pnpm --filter docs build",
    "docs:dev": "pnpm --filter docs --filter dialog --filter manager dev",
    "format": "biome format --write",
    "postinstall": "git submodule update --init --recursive && pnpm preconstruct",
    "preconstruct": "tsx ./scripts/preconstruct.ts",
    "preinstall": "pnpx only-allow pnpm",
    "prepare": "pnpm simple-git-hooks",
    "test": "vitest -c ./test/vitest.config.ts",
    "test:ci": "CI=true vitest -c ./test/vitest.config.ts"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.1",
    "@biomejs/biome": "2.0.0-beta.1",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.7",
    "@size-limit/preset-big-lib": "^11.1.6",
    "@tanstack/react-query": "catalog:",
    "@types/http-proxy": "^1.17.16",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@vitest/coverage-v8": "^3.1.1",
    "@wagmi/cli": "^2.2.0",
    "@wagmi/core": "catalog:",
    "http-proxy": "^1.18.1",
    "knip": "^5.50.5",
    "ox": "catalog:",
    "prool": "^0.0.23",
    "publint": "^0.2.12",
    "sherif": "1.5.0",
    "simple-git-hooks": "^2.11.1",
    "size-limit": "^11.1.6",
    "tsx": "^4.19.4",
    "typed-query-selector": "^2.12.0",
    "typescript": "catalog:",
    "viem": "catalog:",
    "vite": "catalog:",
    "vitest": "^3.1.1",
    "wagmi": "catalog:"
  },
  "packageManager": "pnpm@10.10.0",
  "engines": {
    "node": ">=22.5"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm check"
  },
  "knip": {
    "entry": [
      "src/{index,remote/index,wagmi/index}.ts!"
    ],
    "ignore": [
      "**/test/**",
      "scripts/**",
      "contracts/**",
      "**/internal/**",
      "**/_generated/**",
      "wagmi.config.ts"
    ],
    "ignoreBinaries": [
      "forge"
    ],
    "ignoreUnresolved": [
      "tslib"
    ],
    "ignoreWorkspaces": [
      "apps/**",
      "examples/**"
    ],
    "ignoreDependencies": [
      "react",
      "wagmi",
      "@wagmi/*",
      "@tanstack/react-query",
      "@size-limit/preset-big-lib"
    ]
  },
  "size-limit": [
    {
      "name": "import * from 'ox'",
      "path": "./src/_dist/index.js",
      "import": "*"
    }
  ],
  "pnpm": {
    "patchedDependencies": {
      "@tanstack/react-router": "patches/@tanstack__react-router.patch",
      "@wagmi/cli": "patches/@wagmi__cli.patch",
      "@wagmi/core": "patches/@wagmi__core.patch"
    }
  }
}

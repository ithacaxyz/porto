{
  "name": "@porto/ui",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "src",
    "styled-system",
    "assets",
    "panda-porto-config.ts",
    "vite-plugin.ts"
  ],
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./source": "./src/index.ts",
    "./panda-config": "./panda-porto-config.ts",
    "./vite-plugin": "./vite-plugin.ts",
    "./styles.css": "./dist/styles.css"
  },
  "scripts": {
    "build": "pnpm run /^build:/",
    "build:lib": "vite build",
    "build:css": "mkdir -p dist && panda cssgen --outfile dist/styles.css",
    "check": "biome check --write --unsafe",
    "check:types": "tsc --noEmit",
    "dev": "pnpm run /^dev:.*/",
    "dev:lib": "vite build --watch",
    "dev:css": "panda cssgen --outfile dist/styles.css --watch",
    "prepare": "panda codegen"
  },
  "dependencies": {
    "cuer": "^0.0.2",
    "unplugin-icons": "catalog:"
  },
  "peerDependencies": {
    "@ariakit/react": "*",
    "porto": "*",
    "react": ">=19",
    "react-dom": ">=19"
  },
  "devDependencies": {
    "@ariakit/react": "catalog:",
    "@iconify/json": "catalog:",
    "@microsoft/api-extractor": "^7.52.9",
    "@pandacss/dev": "^0.54.0",
    "@porto/apps": "workspace:*",
    "@size-limit/preset-small-lib": "^11.1.6",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vitejs/plugin-react-swc": "catalog:",
    "porto": "workspace:*",
    "postcss": "^8.5.6",
    "rolldown-plugin-dts": "^0.14.2",
    "size-limit": "^11.2.0",
    "typescript": "catalog:",
    "unplugin-dts": "1.0.0-beta.4",
    "unplugin-icons": "catalog:",
    "unplugin-isolated-decl": "^0.14.6",
    "vite": "catalog:",
    "vite-tsconfig-paths": "^5.1.4"
  }
}

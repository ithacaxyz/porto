{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "files": {
    "ignore": [
      "contracts/lib",
      "extension/.output",
      "extension/.wxt",
      "src/core/internal/generated.ts",
      "tsconfig.json",
      "tsconfig.*.json",
      "app/src/routeTree.gen.ts",
      "app/dist"
    ]
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noBannedTypes": "off",
        "useLiteralKeys": "off"
      },
      "nursery": {
        "useSortedClasses": {
          "level": "error"
        }
      },
      "performance": {
        "noDelete": "off"
      },
      "style": {
        "useTemplate": "off",
        "noNonNullAssertion": "off",
        "noUnusedTemplateLiteral": "off"
      },
      "suspicious": {
        "noAssignInExpressions": "off",
        "noConsoleLog": "error",
        "noExplicitAny": "off",
        "noShadowRestrictedNames": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "all",
      "semicolons": "asNeeded"
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "overrides": [
    {
      "include": ["*.svelte"],
      "linter": {
        "rules": {
          "style": {
            "useConst": "off",
            "useImportType": "off"
          }
        }
      }
    }
  ]
}
